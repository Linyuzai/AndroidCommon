<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasonIcon">

        <attr name="icon_percent_center" format="float" />
        <attr name="icon_percent" format="float" />
        <attr name="icon_percent_x" format="float" />
        <attr name="icon_percent_y" format="float" />
        <attr name="icon_percent_offset" format="float" />
        <attr name="icon_percent_offset_x" format="float" />
        <attr name="icon_percent_offset_y" format="float" />
        <attr name="icon_offset" format="reference|dimension" />
        <attr name="icon_offset_x" format="reference|dimension" />
        <attr name="icon_offset_y" format="reference|dimension" />

        <attr name="icon_color" format="reference|color" />
        <attr name="icon_pen_size" format="reference|dimension" />
        <attr name="icon_pen_cap" format="enum">
            <enum name="butt" value="0" />
            <enum name="round" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="icon_pen_join" format="enum">
            <enum name="miter" value="0" />
            <enum name="round" value="1" />
            <enum name="bevel" value="2" />
        </attr>
        <attr name="icon_pen_style" format="enum">
            <enum name="fill" value="0" />
            <enum name="stroke" value="1" />
            <enum name="fill_stroke" value="2" />
        </attr>
        <attr name="icon_type" format="enum">
            <enum name="none" value="0" />
            <enum name="line_vertical" value="10" />
            <enum name="line_horizontal" value="20" />
            <enum name="line_slope_positive" value="30" />
            <enum name="line_slope_negative" value="40" />
            <enum name="circle" value="50" />
            <enum name="oval" value="60" />
            <enum name="rect" value="70" />
            <enum name="arc" value="80" />
            <enum name="bitmap" value="90" />
            <enum name="polygon" value="100" />
            <enum name="polygon_extra" value="110" />
            <enum name="polygon_quad" value="120" />
            <enum name="back" value="11" />
            <enum name="add" value="21" />
            <enum name="add_hollow_circle" value="31" />
            <enum name="add_solid_circle" value="41" />
            <enum name="correct" value="51" />
            <enum name="error" value="61" />
        </attr>
        <!-- 需要两种颜色 -->
        <attr name="icon_auxiliary_color" format="reference|color" />
        <!-- 需要缩放其中一个图形 -->
        <attr name="icon_auxiliary_scale" format="float" />
        <!-- 需要圆角半径 -->
        <attr name="icon_round_all" format="reference|dimension" />
        <attr name="icon_round_left_top" format="reference|dimension" />
        <attr name="icon_round_left_bottom" format="reference|dimension" />
        <attr name="icon_round_right_top" format="reference|dimension" />
        <attr name="icon_round_right_bottom" format="reference|dimension" />
        <!-- 圆弧 -->
        <attr name="icon_arc_angle_start" format="float" />
        <attr name="icon_arc_angle_sweep" format="float" />
        <attr name="icon_arc_center" format="boolean" />
        <!-- res -->
        <attr name="icon_image_res" format="reference" />
        <!-- 多边形 -->
        <attr name="icon_polygon_edge_count" format="integer" />
        <attr name="icon_polygon_extra_offset" format="reference|dimension" />
        <!-- path -->
        <attr name="icon_path_effect_corner" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="RectImageView">
        <attr name="round_radius" format="reference|dimension" />
    </declare-styleable>
</resources>